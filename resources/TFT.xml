<tft>
	<startlogo>
		<image path="$INFO[Distrologo]">
			<resx>300</resx>
			<resy>220</resy>
			<xpos>center</xpos>
			<ypos>center</ypos>
		</image>
		<text display="$INFO[Distroname]">
			<font>None</font>
			<size>40</size>
			<color>COLOR.RED</color>
			<xpos>center</xpos>
			<ypos>-20</ypos>
		</text>
	</startlogo>
	<general>
		<image path="kodi.png">
			<resx>400</resx>
			<resy>400</resy>
			<xpos>70</xpos>
			<ypos>30</ypos>
		</image>
		<text display="$INFO[System.Time(hh:mm:ss)]">
			<font>None</font>
			<size>80</size>
			<color>COLOR.WHITE</color>
			<xpos>20</xpos>
			<ypos>50</ypos>
		</text>
	</general>
	<navigation>
		<image path="kodi.png">
			<resx>80</resx>
			<resy>80</resy>
			<xpos>-5</xpos>
			<ypos>5</ypos>
		</image>
		<text display="$INFO[System.Time(hh:mm:ss)]">
			<font>None</font>
			<size>30</size>
			<color>COLOR.WHITE</color>
			<xpos>center</xpos>
			<ypos>5</ypos>
		</text>
		<text display="$INFO[System.CurrentWindow]">
			<font>None</font>
			<size>32</size>
			<color>COLOR.WHITE</color>
			<xpos>center</xpos>
			<ypos>center</ypos>
		</text>
		<text display="$INFO[System.CurrentControl]">
			<font>None</font>
			<size>40</size>
			<color>COLOR.RED</color>
			<xpos>center</xpos>
			<ypos>-50</ypos>
		</text>
	</navigation>
	<music>
		<text display="music">
			<font>None</font>
			<size>24</size>
			<color>COLOR.RED</color>
			<xpos>10</xpos>
			<ypos>100</ypos>
		</text>
	</music>
	<video>
		<text display="video">
			<font>None</font>
			<size>24</size>
			<color>COLOR.RED</color>
			<xpos>10</xpos>
			<ypos>100</ypos>
		</text>
	</video>
	<pvr>
		<text display="pvr">
			<font>None</font>
			<size>24</size>
			<color>COLOR.RED</color>
			<xpos>10</xpos>
			<ypos>100</ypos>
		</text>
	</pvr>
</tft>
